EVENT MAINLOOP1
ENDSPRITE
ADD 1 TO A
IF A > B
    LET A = 0
    IF G = 0
        LET G = 1
    ELSE
        LET G = 0
    ENDIF
    IF C = 0
        GETRANDOM 120
        SPAWN 1 2
        SPAWNED
        LET Y = RND
        ADD 8 TO Y
        LET X = RIGHTEDGE
        GETRANDOM 80
        LET DIRECTION = RND
        ADD 112 TO DIRECTION
        GETRANDOM 15
        LET A = RND
        IF RND > 9
            ADD 1 TO D
        ENDIF
    ENDIF
    IF C = 1
        SPAWN 2 1
        SPAWNED
        IF G = 0
            LET Y = TOPEDGE
        ELSE
            LET Y = BOTTOMEDGE
        ENDIF
        LET X = RIGHTEDGE
    ENDIF
    IF C = 2
        SPAWN 3 3
        SPAWNED
        LET DIRECTION = 0
        LET SETTINGA = 4
        GETRANDOM 63
        LET Y = RND
        ADD 24 TO Y
        LET X = RIGHTEDGE
    ENDIF
    IF C = 4
        SPAWN 4 4
        SPAWNED
        LET SETTINGA = 0
        GETRANDOM 120
        LET Y = RND
        ADD 20 TO Y
        IF Y > 80
            LET SETTINGA = 255
        ELSE
            LET SETTINGA = 1
        ENDIF
        LET X = 0
    ENDIF
    IF C = 3
        SPAWN 5 6
        SPAWNED
        GETRANDOM 120
        LET Y = RND
        ADD 20 TO Y
        LET SETTINGA = RND
        LET X = RIGHTEDGE
    ENDIF
    IF C = 5
        LET N = 0
        SPAWN 6 7
        SPAWNED
        GETRANDOM 240
        IF RND <= 112
            LET Y = RND
            ADD 8 TO Y
            LET X = RIGHTEDGE
        ELSE
            LET Y = 0
            LET X = RND
        ENDIF
        GETRANDOM 3
        LET SETTINGA = RND
        ADD 3 TO SETTINGA
        LET A = B
        SUBTRACT 10 FROM A
        IF RND <= 1
            ADD 1 TO D
        ENDIF
    ENDIF
    LET SETTINGB = 3
    IF C > 5
        SPAWN 8 8
        SPAWNED
        LET X = RIGHTEDGE
        LET Y = 80
        LET SETTINGB = 6
        LET D = 1
    ENDIF
    ENDSPRITE
    SUBTRACT 1 FROM D
    IF D = 0
        ADD 1 TO C
        ; SOUND 2
        IF C = E
            LET C = 0
            LET N = 1
            IF B > 24
                SUBTRACT 4 FROM B
            ENDIF
        ENDIF
        LET D = 12
    ENDIF
ENDIF


